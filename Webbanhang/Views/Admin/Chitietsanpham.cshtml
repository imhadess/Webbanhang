@model Webbanhang.Models.SANPHAM

@{
    ViewBag.Title = "Chitietsanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SẢN PHẨM</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENSP)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.GIASP) VNĐ
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.MOTASP)
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
        </dd>

        <dt>
            Số lượng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
           Danh mục:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DANHMUCSP.TENDM)
        </dd>

        <dt>
            Hãng sản xuất:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HANGSX.TENHANG)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="@Url.Content("~/images/"+  Model.HINHSP)" width="70px" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Suasanpham", new { id = Model.MaSP }) |  
    @Html.ActionLink("Trở về quản lý sản phẩm", "Sanpham")
</p>
