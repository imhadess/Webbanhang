@model Webbanhang.Models.SANPHAM

@{
    ViewBag.Title = "Themmoisanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM SẢN PHẨM MỚI</h2>
@*Them thuoc tinh cho form de upload anh*@
@using (Html.BeginForm("Themmoisanpham", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên sản phẩm:
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá bán:
            <div class="col-md-10">
                @Html.EditorFor(model => model.GIASP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GIASP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mô tả sản phẩm:
   
            <div class="col-md-10">
                <textarea name="MOTASP">Mô tả thông tin sách</textarea>
            </div>
        </div>

        <div class="form-group">
            Ngày cập nhật:
            <div class="col-md-10">
                <input type="date" name="Ngaycapnhat" />
                @Html.ValidationMessageFor(model => model.Ngaycapnhat)
            </div>
        </div>

        <div class="form-group">
            Số lượng:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Danh mục :
            <div class="col-md-10">
                @Html.DropDownList("MADM")
            </div>
        </div>

        <div class="form-group">
            Hãng sản xuất :
            <div class="col-md-10">
                @Html.DropDownList("MaHANGSX")
            </div>
        </div>

        <div class="form-group">
            Hình ảnh sản phẩm:
            <div class="col-md-10">
                <input type="file" name="fileUpload" />
                @*thong bao trung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="THÊM MỚI" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về quản lý sản ", "Sanpham")
</div>
