
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12" style="text-align: center; padding: 30px 0; font-size: 30px;">Thông tin chi tiết sản phẩm</div>
        <div class="col-md-6">
            <img src="~/images/@Model.HINHSP">
        </div>
        <div class="col-md-6">
            <h3>Tên sản phẩm: @Model.TENSP</h3>
            <h3>Giá sp: @Model.GIASP</h3>
            <h3>Mô tả sp: @Model.MOTASP</h3>
            <div class="buy_bt"><a href="@Url.Action("ThemGioHang", "GioHang", new { @maSP = Model.MaSP, strURL=Request.Url.ToString() })">Mua ngay</a></div>
        </div>
    </div>
</div>



