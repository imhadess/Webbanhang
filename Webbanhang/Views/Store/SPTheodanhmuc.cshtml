
@{
    ViewBag.Title = "SPTheodanhmuc";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container">
    <h1 class="fashion_taital">Sản phẩm theo danh mục</h1>
    <div class="fashion_section_2">
        <div class="row row-flex">
            @foreach (var sanpham in Model)
            {
                <div class="col-lg-4 col-sm-4">
                    <div class="box_main">
                        <h4 class="shirt_text">@sanpham.TENSP</h4>
                        <p class="price_text">Giá  <span style="color: #262626;">@sanpham.GIASP</span></p>
                        <div class="tshirt_img"><img src="~/images/@sanpham.HINHSP"></div>
                        <div class="btn_main">
                            <div class="buy_bt"><a href="#">Buy Now</a></div>
                            <div class="seemore_bt"><a href="@Url.Action("Details", "Store", new {id = sanpham.MaSP})">See More</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>